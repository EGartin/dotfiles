let &t_Co=256       " use 256 colors
syntax on           " set syntax on for theme coloring
colorscheme desert  " set theme, located in .vim/

set showcmd         " display incomplete commands
set ruler           " show the cursor position all the time
set title           " show title in console title bar
set showcmd         " shows what you are typing as a command
set autoindent      " auto-indentation
set expandtab       " spaces are better than a tab character
set smarttab        " set tab size to 3
set number          " display line numbers
set hlsearch        " highlight things that we find with the search.
set nohidden        " remove the buffer when tab closes.
set shiftwidth=2    " character indentation
set softtabstop=2   " tab indentation
set mouse=a         " enable mouse support in console
set backspace=2     " backspace size